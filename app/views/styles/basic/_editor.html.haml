  %label=t( 'style.border_radius' ) + ':'
  = text_field_tag( 'form[style][border_radius]', style.border_radius, :onchange => "var v=this.value+'px';$('\#mfd_#{form.id}').css({'border-radius':v,'-webkit-border-radius':v,'-khtml-border-radius':v,'-moz-border-radius':v});" )

