  %label=t( 'style.title_family' ) + ':'
  = font_select_tag( 'form[style][title_family]', style.title_family, :onchange => "$('\#mfd_#{form.id} h3').css('font-family',this.value);" )

%p
  %label=t( 'style.title_size' ) + ':'
  = text_field_tag( 'form[style][title_size]', style.title_size, :onchange => "$('\#mfd_#{form.id} h3').css('font-size',this.value+'px');" )

