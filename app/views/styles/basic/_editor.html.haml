%p
  %label=t( 'style.font_family' ) + ':'
  = font_select_tag( 'form[style][font_family]', style.font_family, :onchange => "$('\#mfd_#{form.id}').css('font-family',this.value);" )

%p
  %label=t( 'style.font_size' ) + ':'
  = text_field_tag( 'form[style][font_size]', style.font_size, :onchange => "$('\#mfd_#{form.id}').css('font-size',this.value+'px');" )

%p
  %label=t( 'style.font_color' ) + ':'
  = color_field_tag( 'form[style][font_color]', style.font_color, :onchange => "$('\#mfd_#{form.id}').css('color',this.value);" )

