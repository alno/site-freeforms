%html{ 'xmlns' => "http://www.w3.org/1999/xhtml", 'xml:lang' => "ru", 'lang' => "ru" }
  %head
    %meta{ 'http-equiv' => "content-type", 'content' => "text/html;charset=UTF-8" }
    %title=t( 'titles.' + controller.controller_name + '.' + controller.action_name ) + ' | FreeForms.ru'
    = stylesheet_link_merged :app
    = javascript_include_merged :app
  %body
    
    <!--LiveInternet counter--><script type="text/javascript"><!--
    new Image().src = "http://counter.yadro.ru/hit?r"+
    escape(document.referrer)+((typeof(screen)=="undefined")?"":
    ";s"+screen.width+"*"+screen.height+"*"+(screen.colorDepth?
    screen.colorDepth:screen.pixelDepth))+";u"+escape(document.URL)+
    ";"+Math.random();//--></script><!--/LiveInternet-->

    #page
      #header
        .r= link_to t( :link_about ), about_path
        %h1
          %a{ :href => root_url } FreeForms.ru<sup>&beta;</sup>
        %h2 Бесплатные контактные формы для Вашего сайта
      #topmenu= render :partial => 'shared/topmenu'
      
      #left{ :class => 'ui-widget ui-widget-content ui-corner-all' }= render :partial => 'shared/sidebar'
      #title
        %h1=t 'titles.' + controller.controller_name + '.' + controller.action_name
      #content		  
        - if flash[:notice]
          #flash-notice
            = image_tag 'icons/ok.png'
            = flash[:notice]
        - if flash[:error]
          #flash-error
            = image_tag 'icons/error.png'
            = flash[:error]
    		  
        = yield
