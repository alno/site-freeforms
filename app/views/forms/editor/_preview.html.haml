.mfd{ :id => "mfd_#{form.id}", :style => wrap_style( form ) }
  %h3{ :style => header_style( form ) }= e( form.title )

  - form.fields.each_with_index do |field,i|
    = field.render_input( form.id, i )

  .submit
    = submit_tag e(form.submit_title), :onclick => "return false;"

  .fb{ :id => "mfb_#{form.id}", :style => fb_style( form ) }
