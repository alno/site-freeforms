= form_for( @form ) do |f|
  = render :partial => 'forms/editor/editor', :locals => { :form => @form, :type => 'editor', :f => f }

  %br
  = f.submit t('actions.form.update'), :class => 'button'
  = styled_link_to :cancel, form_path( @form )
  = styled_link_to 'actions.form.destroy', form_path( @form ), :confirm => t('confirm.destroy_form'), :method => :delete

%script= "ui.initEditForm(#{@hash || 'location.hash'});"

= render :partial => 'forms/editor/protos', :locals => { :form => @form }
