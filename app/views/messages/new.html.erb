<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>  
  
  <p>
    <%= f.label :sender_name %><br />
    <%= f.text_field :sender_name %>
  </p>
  <p>
    <%= f.label :sender_email %><br />
    <%= f.text_field :sender_email %>
  </p>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>