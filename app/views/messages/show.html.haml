
%p
  %b=t :message_sent_time
  =l @message.created_at, :format => :long

%p
  %b=t :message_read_time
  = @message.read_at ? l( @message.read_at, :format => :long ) : t( :message_unread )

- @message.form.fields.each_with_index do |field,i|
  %p
    %b=h field.title
    = field.render_value( @message.data[i] )
