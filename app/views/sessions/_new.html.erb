<% form_for @user_session, :url => session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :email, t('activerecord.attributes.user_session.email') %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password, t('activerecord.attributes.user_session.password') %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, t('activerecord.attributes.user_session.remember_me') %><br />
  <br />
  <%= f.submit I18n.t :enter %>
<% end %>

<script>
    $('#new_user_session').validate({
            rules: {
                        'user_session[password]': {
                            required: true,
                            minlength: 5
                        },
                        'user_session[email]': {
                            required: true,
                            email: true
                        }
                    },
                    messages: {
                        'user_session[password]': {
                            required: "Please provide a password",
                            minlength: "Your password must be at least 5 characters long"
                        },
                        'user_session[email]': "Please enter a valid email address"
                    }

            });
</script>